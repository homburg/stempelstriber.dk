# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /            controllers.Application.index()

GET 		/webjars/*file        controllers.WebJarAssets.at(file)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         controllers.Assets.at(path="/public", file)
 
GET /c/:id controllers.Application.comicWithoutLanguage(id: Int)

GET /c/:lang/:id controllers.Application.c(id: Int, lang: String)

GET /session/sign-in controllers.Session.signIn()
GET /login controllers.Session.signIn()

GET /oauth/callback controllers.Session.widget()

GET /oauth/sign-out controllers.Application.index()

GET /oauth/success controllers.Session.success()

GET /test/db	controllers.Application.testDb()
GET /test/setup-db	controllers.Application.setupDb()
GET /test/language  controllers.Application.language()

GET /comics.scala   controllers.Application.comics()
GET /comics.json    controllers.Application.comicsJson()


