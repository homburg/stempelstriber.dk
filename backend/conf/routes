# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /            controllers.Application.index()

GET 		/webjars/*file        controllers.WebJarAssets.at(file)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         controllers.Assets.at(path="/public", file)
 
GET /c/:id controllers.Application.comicWithoutLanguage(id: Int)

GET /c/:lang/:id controllers.Application.c(id: Int, lang: String)

GET /session/sign-in controllers.Session.signIn()
GET /login controllers.Session.signIn()
GET /logout controllers.Session.signOut()

GET /oauth/callback controllers.Session.widget()

GET /oauth/signout controllers.Session.signOut()

GET /oauth/success controllers.Session.success()

GET /test/db	controllers.Test.testDb()
GET /test/language  controllers.Test.language()
GET /test/session controllers.Test.session()

GET /test/comics.scala   controllers.Test.comics()
GET /test/comics.json    controllers.Test.comicsJson()

GET /admin/setup-db	controllers.Admin.setupDb()
