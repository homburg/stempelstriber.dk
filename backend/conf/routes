# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                     controllers.Application.index

GET         /view*path            controllers.Application.view(path: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         controllers.Assets.at(path="/public", file)

GET         /webjars/*file        controllers.WebJarAssets.at(file)

POST        /upload               controllers.Application.upload

GET         /files                controllers.Application.files()

GET         /settings             controllers.Application.settings()

GET         /buckets              controllers.Application.buckets()

GET         /file/*path           controllers.Application.file(path)

GET /status controllers.Application.status()
